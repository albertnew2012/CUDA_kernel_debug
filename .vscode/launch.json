{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "CUDA Debug",
        "type": "cuda-gdb",
        "request": "launch",
        "gdb": "cuda-gdb",
        "program": "${workspaceFolder}/build/kernel_debug",
        "args": [],
        "stopAtEntry": true,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "preLaunchTask": "build"
      }
    ]
  }
  